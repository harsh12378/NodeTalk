# Port for backend server
PORT=5000

# MongoDB connection (MongoDB Atlas)
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.abcd.mongodb.net/mydatabase

# JWT secret key (used to sign tokens)
JWT_SECRET=your_jwt_secret_here

# ---------------------------
# Google Authentication
# ---------------------------

# Google OAuth client ID (from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# (optional) Google OAuth client secret (if you use OAuth2 flow)
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ---------------------------
# Other configs (if needed later)
# ---------------------------

# Example: for email/OTP service or cloud storage
# EMAIL_HOST=smtp.gmail.com
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_email_password
